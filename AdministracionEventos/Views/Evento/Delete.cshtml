@model AdministracionEventos.Models.Evento

@{
    ViewBag.Title = "Delete";
}

<h2>Delete Evento</h2>

<h3>¿Está seguro de que desea eliminar este evento?</h3>

<div>
    <h4>Detalles del Evento</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Titulo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Descripcion)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Lugar)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Lugar)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Fecha)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UsuarioID)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UsuarioID)
        </dd>
    </dl>

    <div class="form-actions">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <!-- Botón de eliminación más destacado -->
            <div class="form-group">
                <button type="submit" class="btn btn-danger" aria-label="Confirmar eliminación">
                    Eliminar Evento
                </button>
                <!-- Enlace para regresar a la lista de eventos -->
                @Html.ActionLink("Cancelar", "Index", new { @class = "btn btn-secondary", aria_label = "Volver a la lista de eventos" })
            </div>
        }
    </div>
</div>
